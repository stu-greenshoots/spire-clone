{
  "name": "spire-clone",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate": "eslint . && vitest run && vite build",
    "validate:quick": "vitest run",
    "generate-art": "node scripts/generate-images.js",
    "generate-art:dry": "node scripts/generate-images.js --dry-run",
    "compress-images": "node scripts/compress-images.js",
    "generate-sprites": "node scripts/generate-sprite-sheets.js",
    "generate-card-sprites": "node scripts/generate-sprite-sheets.js --type=cards",
    "test:e2e": "npx playwright test --config=tests/e2e/playwright.config.js",
    "test:e2e:headed": "npx playwright test --config=tests/e2e/playwright.config.js --headed",
    "test:e2e:screenshots": "SCREENSHOT_DIR=screenshots npx playwright test --config=tests/e2e/playwright.config.js",
    "test:e2e:debug": "npx playwright test --config=tests/e2e/playwright.config.js --debug"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "openai": "^6.16.0",
    "sharp": "^0.33.5",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17"
  }
}
